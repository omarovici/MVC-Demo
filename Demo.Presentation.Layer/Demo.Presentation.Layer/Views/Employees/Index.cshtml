@model IEnumerable<EmployeeViewModel>

@{
    ViewBag.Title = "Employees List";
    Layout = "_Layout";
}
<h1>@TempData["Success"]</h1>

<h2>Employees List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="mt-2">
    <form asp-action="Index" class="row offset-1">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="Employee's Name" name="SearchValue" required="required"/>
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search"/>
        </div>
    </form>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <span style="color:@(item.IsActive ? "green" : "red")">&#9679;</span> 
            </td>
            <partial name="_ButtonsPartialView" model="@item.Id"/><partial/>
        </tr>
    }
    </tbody>
</table>