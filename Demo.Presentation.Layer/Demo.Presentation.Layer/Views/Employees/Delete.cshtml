@model Demo.Data.Access.Layer.Models.Employee
        
        @{
            ViewBag.Title = "Delete Employee";
            Layout = "_Layout";
        }
        
        <h2>Delete Employee</h2>
        
        <h3>Are you sure you want to delete this employee?</h3>
        
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
                <dt class="col-sm-2">
                    Age
                </dt>
                <dd class="col-sm-10">
                    @Model.Age
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @Model.Address
                </dd>
                <dt class="col-sm-2">
                    Salary
                </dt>
                <dd class="col-sm-10">
                    @Model.Salary
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    Phone
                </dt>
                <dd class="col-sm-10">
                    @Model.Phone
                </dd>
                <dt class="col-sm-2">
                    Is Active
                </dt>
                <dd class="col-sm-10">
                    @Model.IsActive
                </dd>
            </dl>
        </div>
        
        <form asp-action="ConfirmDelete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>