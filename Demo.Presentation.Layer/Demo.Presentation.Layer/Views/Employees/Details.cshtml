@model Demo.Data.Access.Layer.Models.Employee
        
        @{
            ViewBag.Title = "Employee Details";
            Layout = "_Layout";
        }
        
        <h2>@Model.Name Employee Details</h2>
        
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
                <dt class="col-sm-2">
                    Age
                </dt>
                <dd class="col-sm-10">
                    @Model.Age
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @Model.Address
                </dd>
                <dt class="col-sm-2">
                    Salary
                </dt>
                <dd class="col-sm-10">
                    @Model.Salary
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    Phone
                </dt>
                <dd class="col-sm-10">
                    @Model.Phone
                </dd>
                <dt class="col-sm-2">
                    Is Active
                </dt>
                <dd class="col-sm-10">
                    @Model.IsActive
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>