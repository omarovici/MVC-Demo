@model IEnumerable<Demo.Data.Access.Layer.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Departments" asp-action="Create" class="btn btn-primary mb-3">Create New Department</a>
@if (!Model.Any())
{
    <div class="mt-5 alert-warning">
        <h2>There is no Department</h2>
    </div>
}
else
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreatedDate</td>
                    <td>
                        <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-controller="Departments" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Departments" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}